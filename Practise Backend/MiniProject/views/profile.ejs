<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white">
    <div class="w-full min-h-screen p-10">
      <div class="w-full flex justify-end">
        <a
          href="/logout"
          class="bg-red-500 rounded-md px-3 py-2 inline-block text-sm mb-5"
          >Logout</a
        >
      </div>
      <div class="flex items-start gap-3 mb-3">
        <div class="w-10 h-10 rounded-full overflow-hidden ">
          <img
            src="/images/uploads/<%= user.profilepic %>"
            alt=""
            class="w-full h-full object-cover"
          />
        </div>
        <h3 class="text-3xl">Hello, <%= user.name %> ðŸ‘‹ðŸ‘‹</h3>
      </div>
      <h5 class="mb-5">You can create a new post</h5>

      <!-- Post Form -->
      <form method="post" action="/post">
        <textarea
          class="p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md block"
          placeholder="What's on you mind?"
          name="content"
          id=""
        ></textarea>
        <input
          type="submit"
          value="Create New Post"
          class="px-3 w-40 py-2 bg-blue-500 block rounded-md mt-2 cursor-pointer"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-300">Your Posts.</h3>
        <div class="postcontainer">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="post w-1/3 p-5 mb-14 bg-zinc-800 border-[1px] border-zinc-700"
          >
            <h4 class="text-blue-500 mb-2">@<%=user.username%></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <small class="mt-2"><%= post.likes.length %> like</small>
            <div class="btns flex gap-4 mt-5">
              <a href="/like/<%= post._id %>" class="text-blue-500">
                <%= post.likes.indexOf(user._id) === -1 ? "Like":"Unlike" %>
              </a>
              <a href="/edit/<%= post._id %>" class="text-zinc-600">Edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
