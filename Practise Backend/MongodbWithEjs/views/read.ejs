<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="text-xl"> 
            <a class="inline-block bg-green-500 text-black px-3 py-2 rounded-md mb-10" href="/">Back to Home</a>
        </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-8 flex-wrap">
        <% if (users.length > 0) { %>
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-60 rounded-lg bg-zinc-700 mb-3">
                        <img class="w-full h-full object-cover" src="<%= user.image %>" alt="image">
                    </div>
                    <h3 class="text-2xl tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex justify-around gap-3 mt-10">
                      <a class="text-green-500" href="/edit/<%= user._id %>">Edit User</a>
                      <a class="text-red-500 " href="/delete<%= user._id %>">Delete User</a>
                    </div>
                  </div>
    
           <% }) %>
        <% } else { %>
            <h1 class="text-2xl tracking-tighter">No users created yet</h1>
       <% } %>
      </div>
    </div>
  </body>
</html>
